FROM node:18-alpine

WORKDIR /app

# Install build dependencies
RUN apk add --no-cache \
    g++ \
    python3 \
    make

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 5000

# Start development server
CMD ["npm", "run", "dev"]
