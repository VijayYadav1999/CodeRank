FROM node:18-alpine

WORKDIR /app

# Install build tools & compilers (Alpine Linux)
RUN apk add --no-cache \
    g++ \
    python3 \
    make

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Build TypeScript
RUN npm run build

# Expose port
EXPOSE 5000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD npm run health || exit 1

# Start application
CMD ["npm", "start"]
